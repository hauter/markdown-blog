html
  head
    title=title
    link(rel="stylesheet", href="/static/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
    script(src="/static/js/bootstrap.min.js")
    link(rel="stylesheet", href="/static/css/github.css")
    link(rel="stylesheet", href="/static/css/style.css")
    script(src="/static/js/index.js")


  body

    .container
      .navbar.navbar-dark.bg-dark.navbar-expand-lg.text-white
        a.navbar-brand(href="/index") Home
        button.navbar-toggler(type="button" data-toggler="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div#navbarNav.collapse.navbar-collapse
          .navbar-nav
            a.nav-item.nav-link(href="/about") About
            a.nav-item.nav-link(href="/posts") Posts

      ul#posts-summaries.list-group
        each item in posts_summaries
          a(href=item.path).list-group-item.list-group-flush.list-group-item-action= item.title
            .justify-content-between.mt-1
              small.text-muted= item.path




      

    